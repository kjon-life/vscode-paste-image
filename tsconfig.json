{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "strict": true,
    "skipLibCheck": true, /* Skip type checking of declaration files (important for node_modules) */
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}